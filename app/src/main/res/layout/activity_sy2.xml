<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:scrollbars="none">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:foreground="@mipmap/sybg">
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/fid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--            上拼购logo图片-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/logo"
            ></ImageView>
            <!--        消息-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/news"></ImageView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:id="@+id/ll_search">
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
<!--    banner-->
    <RelativeLayout
        android:id="@+id/banner"
        android:layout_below="@+id/fid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        tools:ignore="MissingClass">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vierpage"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/dp1"></ImageView>
    </androidx.viewpager.widget.ViewPager>
    </RelativeLayout>

<!--单品优选和组合优选两个按钮-->
<RelativeLayout
    android:layout_below="@+id/banner"
    android:id="@+id/twomeun"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<!--    android:layout_marginTop="240dp"-->
    <LinearLayout
        android:id="@+id/container_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
       >
    <LinearLayout
        android:id="@+id/menu_maina"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/firstimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/first"/>
        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组合优选"
            android:layout_gravity="center"
            android:textColor="#000000"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_mainb"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/secondimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/second"/>
        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单品优选"
            android:layout_gravity="center"
            android:textColor="@drawable/color_sy2_selector"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    <!--单品  ************************************************  菜单-->
    <RelativeLayout
        android:layout_below="@+id/twomeun"
        android:id="@+id/dpyx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff">
        <LinearLayout
            android:id="@+id/menu_mainc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="单品优选"
            android:textColor="#000000">
            </TextView>
            <TextView
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="更多推荐>"
                android:textColor="#000000">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/menu_mainc"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <!--        第一单品图文-->
        <LinearLayout
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="180dp"
         android:background="#ffffff"
            android:orientation="vertical">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佛跳墙"
                android:paddingTop="2dp"
                android:layout_gravity="center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥960.00"
                android:paddingTop="3dp"
                android:textColor="#CC0000"
                android:layout_gravity="center">
            </TextView>
        </LinearLayout>
        <!--        第2单品图文-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#ffffff"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/dp1" >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casio手表"
                    android:paddingTop="2dp"
                    android:layout_gravity="center">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥2060.00"
                    android:paddingTop="3dp"
                    android:textColor="#CC0000"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>
        <!--        第3单品图文-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#ffffff"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/dp2" >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本草纲目补水面膜"
                    android:paddingTop="2dp"
                    android:layout_gravity="center">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥416.00"
                    android:paddingTop="3dp"
                    android:textColor="#CC0000"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
<!--****************************************组合优选*****************************-->
    <RelativeLayout
        android:layout_below="@+id/dpyx"
        android:id="@+id/zhyx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff">
        <LinearLayout
            android:id="@+id/zhmenu_mainc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="组合优选"
                android:textColor="#000000">
            </TextView>
            <TextView
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="更多推荐>"
                android:textColor="#000000">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/zhmenu_mainc"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal">
            <!--        第一单品图文-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:background="#ffffff"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/zh" >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零食大礼包"
                    android:paddingTop="2dp"
                    android:layout_gravity="center">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥960.00"
                    android:paddingTop="3dp"
                    android:textColor="#CC0000"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>
            <!--        第2单品图文-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/zh2">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中秋节佳节大礼盒"
                    android:paddingTop="2dp"
                    android:layout_gravity="center">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥2060.00"
                    android:paddingTop="3dp"
                    android:textColor="#CC0000"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>
            <!--        第3单品图文-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:background="#ffffff"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/zh3" >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尖角脆"
                    android:paddingTop="2dp"
                    android:layout_gravity="center">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥416.00"
                    android:paddingTop="3dp"
                    android:textColor="#CC0000"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>
